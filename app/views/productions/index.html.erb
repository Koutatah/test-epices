<h1>List of Daily productions</h1>
<div class="row">
	<div class="col-12">
		<%= link_to 'Upload csv', new_production_path, class: 'btn btn-primary' %>
	</div>
	<div class="col-12">
		<table class="table">
			<thead>
				<tr>
				<th scope="col">#</th>
				<th scope="col">Date</th>
				<th scope="col">Energy</th>
				<th scope="col">Inverter</th>
				<th scope="col"></th>
				</tr>
			</thead>
			<tbody>
				<% @daily_productions.each do |daily_production| %>
					<tr>
					<th scope="row"><%= daily_production.id %></th>
					<td><%= daily_production.date %></td>
					<td><%= daily_production.energy_production %></td>
					<td><%= daily_production.inverters.map(&:id).join(", ") %></td>
					<td><%= link_to 'See more', production_path(daily_production.id), class: 'btn btn-secondary' %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
